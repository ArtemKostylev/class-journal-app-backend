{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2022",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}